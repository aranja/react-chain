{
  "name": "react-chain",
  "version": "0.5.1",
  "description": "A chain of pluggable logic for your React rendering pipline.",
  "repository": "git@github.com:aranja/react-chain.git",
  "author": "Aranja",
  "main": "lib/ReactChain.js",
  "license": "MIT",
  "types": "lib/ReactChain.d.ts",
  "files": [
    "lib"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/enzyme": "^2.7.6",
    "@types/jest": "^20.0.8",
    "@types/react": "^15.0.0",
    "@types/react-dom": "^0.14.23",
    "babel-jest": "^19.0.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "codecov": "^2.1.0",
    "enzyme": "^2.7.1",
    "jest": "^21.0.2",
    "lerna": "2.0.0-rc.1",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-test-renderer": "^15.4.2",
    "ts-jest": "^19.0.3",
    "tslint": "^5.0.0",
    "typescript": "^2.2.1"
  },
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0-beta || ^16.0.0",
    "react-dom": "^15.0.0 || ^16.0.0-beta || ^16.0.0"
  },
  "scripts": {
    "clean": "rm -rf lib",
    "lint": "./scripts/lint.sh",
    "prepare": "npm run clean && npm run typescript",
    "typescript": "tsc",
    "watch": "npm run typescript -- --watch",
    "test": "jest",
    "test-ci": "npm run lint && jest --runInBand --coverage && codecov"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*",
      "!lib/**",
      "!**/__mocks__/**",
      "!**/__tests__/**"
    ],
    "coverageReporters": [
      "json"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testResultsProcessor": "<rootDir>/node_modules/ts-jest/coverageprocessor.js",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "lib",
      "\\.snap$"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
